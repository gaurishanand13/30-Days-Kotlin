<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/doctorImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:text="Name : "
            android:textSize="20sp"
            android:id="@+id/doctorName"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorContactNumber"
            android:text="Contact Number : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorEmailAddress"
            android:text="Email : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/clinicID"
            android:text="Clinic id : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorLicenceDetails"
            android:text="Licence Details : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/speciality"
            android:text="Speciality : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/facilitiesAvailable"
            android:text="Facilities Available : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/insuranceAndLinkedCharges"
            android:text="Insurance &amp; Linked Charges : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorAvailableTimings"
            android:text="Available Timings : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bankDetails"
            android:text="Bank Details : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/paymentCharges"
            android:text="Payment Charges : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorAddress"
            android:gravity=""
            android:text="Address : "
            android:textSize="20sp"
            android:layout_marginBottom="25dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>