<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/doctorImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:text="Name : "
            android:textSize="20sp"
            android:id="@+id/doctorName"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorContactNumber"
            android:text="Contact Number : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorEmailAddress"
            android:text="Email : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorGender"
            android:text="Gender :"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorQualification"
            android:text="Qualification : "
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorLicenceDetails"
            android:text="Licence Details : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorAddress"
            android:gravity=""
            android:text="Address : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorAvailableTimings"
            android:text="Available Timings : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/doctorSpeciality"
            android:text="Doctor Speciality : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>