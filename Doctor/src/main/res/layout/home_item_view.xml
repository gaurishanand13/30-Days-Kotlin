<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/without_rounded_corner_plain"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/homeItemViewImageView"
                android:scaleType="fitXY"
                android:src="@drawable/image_view_border"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/homeItemNameTextView"
                    android:text="Mr John"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Time : "
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/homeItemViewTimings"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:text="20 Apr2020 : 4 PM"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/homeItemClinicID"
                    android:text="Clinic : Abc"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/callClinic"
                android:background="@drawable/rounded_corner_text_view_with_blue_borders"
                android:text="Call Clinic"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.89"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:autoSizeTextType="uniform"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/callDoctor"
                android:background="@drawable/rounded_corner_text_view_with_blue_borders"
                android:layout_marginLeft="5dp"
                android:text="Call Patient"
                android:textSize="13sp"
                android:autoSizeTextType="uniform"
                android:layout_weight="0.94"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chatDoctor"
                android:background="@drawable/rounded_corner_text_view_with_blue_borders"
                android:layout_marginLeft="5dp"
                android:text="Chat Patient"
                android:autoSizeTextType="uniform"
                android:textSize="13sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Created at : "
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/homeItemViewCreatedAT"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:text="20 Apr2020 4 PM"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>